{
  "name": "dotfiles",
  "description": "My personal dotfiles for bootstrapping my computer",
  "repository": "fernandopasik/dotfiles",
  "author": "Fernando Pasik <fernando@pasik.com.ar> (https://fernandopasik.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "ansible": "ansible-playbook -K mac.yml",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "shellcheck -x *.sh .zshrc",
    "postinstall": "ansible-galaxy install -r requirements.yml --force",
    "prepare": "husky install",
    "verify": "npm run format:check && npm run lint"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "prettier-plugin-pkg": "^0.17.1",
    "prettier-plugin-sh": "^0.12.8",
    "shellcheck": "^1.1.0"
  }
}
